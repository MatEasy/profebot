<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.profebot.activities">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_profebot"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_profebot_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:largeHeap="true">
        <activity
            android:name="ar.com.profebot.activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ar.com.profebot.activities.EnterEquationOptionsActivity"
            android:screenOrientation="portrait" />
        <activity android:name="ar.com.profebot.activities.EnterEquationHandDrawActivity" />
        <activity
            android:name="ar.com.profebot.activities.ModuloInteligenteTestActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="ar.com.profebot.activities.SolveEquationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ar.com.profebot.activities.CarmeraActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="ar.com.profebot.activities.PendingExercisesActivity" />
        <activity android:name="ar.com.profebot.activities.EnterPolinomialActivity"
            android:windowSoftInputMode="stateAlwaysVisible" ></activity>
        <activity android:name="ar.com.profebot.activities.EnterPolinomialEquationOptionsActivity" />
        <activity android:name="ar.com.profebot.activities.SolvePolynomialActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>