<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:id="@+id/sort_and_simplify_section_id">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:text="Paso 2: ordenar y simplificar los términos del polinomio"
        android:textColor="@color/colorWhite"
        android:layout_margin="15dp"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/sort_and_simplification_justification_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:text="@string/ORDENAR_Y_SIMPLIFICAR_POLINOMIO"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:padding="5dp"
            android:layout_margin="20dp"
            android:scrollbars="vertical"/>

        <TextView
            android:id="@+id/polynomial_sorted_and_simplified"
            android:background="@drawable/rounded_corners_polynomial_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="45"
            android:gravity="top|start"
            android:textColor="@color/colorBlack"
            android:padding="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="P(x)="
            android:scrollbars="vertical"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/go_to_edition_section_id"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Editar el polinomio"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/rounded_corners_main_buttons"/>

            <Button
                android:id="@+id/go_to_resolution_id"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="¡Empezar a factorear!"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/rounded_corners_polynomial_summary"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
