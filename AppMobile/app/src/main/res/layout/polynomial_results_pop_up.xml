<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_up_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/borders_pop_up">

    <TextView
        android:id="@+id/pop_up_title_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Factoreo terminado"
        android:textSize="40dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="El polinomio:"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"
        android:gravity="start"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <io.github.kexanie.library.MathView
        android:id="@+id/first_polynomial_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:engine="KaTeX">
    </io.github.kexanie.library.MathView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="se puede expresar en forma factorizada como:"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"
        android:gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <io.github.kexanie.library.MathView
        android:id="@+id/last_polynomial_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:engine="KaTeX">
    </io.github.kexanie.library.MathView>

    <TextView
        android:id="@+id/roots_label_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"
        android:gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorGreyText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <Button
            android:id="@+id/go_to_main_menu_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Volver al menu principal"
            android:textSize="15dp"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/rounded_corners_pop_up_back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/go_to_enter_polynomial_id"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Factorear otro polinomio"
                android:textSize="15dp"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:padding="10dp"
                android:background="@drawable/rounded_corners_pop_up_solve" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>